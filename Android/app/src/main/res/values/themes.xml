<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TLUPickleball" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/be_vietnam_pro_semi_bold</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

    </style>

    <style name="Nav_bar_top" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="titleTextColor">@android:color/black</item>
    </style>


    //Tạo nút bấm
    <style name="Base.Theme.Button.Blue" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#0C8CE9</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Base.Theme.Button.Gray" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#939393</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Base.Theme.Button.Red" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#E90C10</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Base.Theme.Button.Green" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#95C786</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Base.Theme.Button.White" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:background">@drawable/button_white_background</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">12dp</item>
    </style>

    // Trạng thái(Đã đóng quỹ / Chưa đóng quỹ)
    <style name="StatusBase" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/status_background</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="StatusPending" parent="StatusBase">
        <item name="android:textColor">#E7564F</item>
        <item name="android:drawableStart">@drawable/ic_status_red</item>
    </style>

    <style name="StatusDone" parent="StatusBase">
        <item name="android:textColor">#26BF3D</item>
        <item name="android:drawableStart">@drawable/ic_status_green</item>
    </style>


    // ô nhập liệu
    <style name="CustomInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColorHint">#3A3A3C</item> <!-- xám nhạt -->
    </style>

    <style name="CustomEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#090909</item> <!-- xám đậm -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyPrimaryButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="backgroundTint">@color/black</item>
    </style>

    <style name="SecondaryTitleTextStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textStyle">bold</item>
    </style>

    <!-- Style cho nhóm nút -->
    <style name="MyToggleGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- Style cho nút -->
    <style name="MyToggleButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LeftRoundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="RightRoundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="Theme.TLUPickleball" parent="Base.Theme.TLUPickleball" >
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
    </style>

    //style cho TextView Thong tin
    <style name="InforTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/underline</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    //Style cho TextView Label Thong tin
    <style name="LabelInforTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    //style cho EditText Thong tin
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>