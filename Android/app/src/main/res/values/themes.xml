<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.TLUPickleball" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/be_vietnam_pro_semi_bold</item>
    </style>

    <style name="Nav_bar_top" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="titleTextColor">@android:color/black</item>
    </style>


    //Tạo nút bấm
    <style name="Base.Theme.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">255dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#0C8CE9</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
    </style>

    // Trạng thái(Đã đóng quỹ / Chưa đóng quỹ)
    <style name="StatusBase" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/status_background</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="StatusPending" parent="StatusBase">
        <item name="android:textColor">#E7564F</item>
        <item name="android:drawableStart">@drawable/ic_status_red</item>
    </style>

    <style name="StatusDone" parent="StatusBase">
        <item name="android:textColor">#26BF3D</item>
        <item name="android:drawableStart">@drawable/ic_status_green</item>
    </style>


    // ô nhập liệu
    <style name="CustomInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">none</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColorHint">#3A3A3C</item> <!-- xám nhạt -->
    </style>

    <style name="CustomEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#090909</item> <!-- xám đậm -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.TLUPickleball" parent="Base.Theme.TLUPickleball" />

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>