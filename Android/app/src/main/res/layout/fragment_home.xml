<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.Test">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Navigation Bar -->
        <include
            android:id="@+id/viewTopNav"
            layout="@layout/view_top_nav_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Greeting Text -->
        <LinearLayout
            android:id="@+id/greetingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/viewTopNav"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi," />

            <TextView
                android:id="@+id/id_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/app_name"
            android:src="@drawable/avt_home"
            app:layout_constraintTop_toBottomOf="@id/greetingLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/linearLayout"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintDimensionRatio="2:3" />

        <!-- Info Card Group -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/imageView2"
            app:layout_constraintStart_toEndOf="@id/imageView2"
            app:layout_constraintEnd_toEndOf="parent">

            <include layout="@layout/view_info_card_single" />
            <include layout="@layout/view_info_card_duo" />
            <include layout="@layout/view_info_wallet" />
        </LinearLayout>

        <!-- Record Match Button -->
        <Button
            android:id="@+id/id_record_match"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ghi nhận trận đấu"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            style="@style/Base.Theme.Button.White"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Manage Member Button -->
        <Button
            android:id="@+id/id_manage_member"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quản lý hội viên"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            style="@style/Base.Theme.Button.White"
            app:layout_constraintTop_toBottomOf="@id/id_record_match"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>