<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:gravity="center_vertical|end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tvPlayer1_p1_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P.G.Quỳnh"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_marginEnd="4dp"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <ImageView
                        android:id="@+id/image_team1_player1_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop" /> </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_team1_player2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tvPlayer1_p2_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P.M.Quang"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_marginEnd="4dp"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <ImageView
                        android:id="@+id/image_team1_player2_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="1-4"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical|start">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/image_team2_player1_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="4dp" />
                    <TextView
                        android:id="@+id/tvPlayer2_p1_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N.T.Bình"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_team2_player2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/image_team2_player2_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:id="@+id/tvPlayer2_p2_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N.P.Sơn"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="60dp" android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_clock" android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvMatchTime"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="17:09"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvMatchStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đã kết thúc"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>