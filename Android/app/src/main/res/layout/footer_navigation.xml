<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="onHomeClick">

        <ImageView
            android:src="@drawable/ic_home"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:text="Trang chủ"
            android:textSize="12sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="onMatchClick">

        <ImageView
            android:src="@drawable/ic_match"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:text="Trận đấu"
            android:textSize="12sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="onFinanceClick">

        <ImageView
            android:src="@drawable/ic_finance"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:text="Tài chính"
            android:textSize="12sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:onClick="onRankClick">

        <ImageView
            android:src="@drawable/ic_rank"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView
            android:text="Xêp hạng"
            android:textSize="12sp"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>
