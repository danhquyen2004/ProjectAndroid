<!--        android:layout_width="8dp"-->
<!--        android:layout_height="8dp"-->
<!--        android:layout_gravity="center_vertical"-->
<!--        android:background="@drawable/bg_dot_unread"-->
<!--        android:visibility="gone"/>-->
</LinearLayout>
