<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">
    <ScrollView
        android:id="@+id/r7jz4xd35v2k"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/r3m47zrc2cco"
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/img_pickleball"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="46dp"
                android:layout_marginBottom="1dp"
                android:orientation="vertical">

                <TextView
                    android:textColor="#2F3739"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="45dp"
                    android:layout_marginStart="33dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Thay đổi mật khẩu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="49dp"
                    android:layout_marginStart="49dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="11dp"
                        android:src="@drawable/ic_lock"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/edt_password_current"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="15sp"
                        android:hint="Mật khẩu hiện tại"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="49dp"
                    android:layout_marginStart="49dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="11dp"
                        android:src="@drawable/ic_lock"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/edt_new_password"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:hint="Mật khẩu mới" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="49dp"
                    android:layout_marginStart="49dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="11dp"
                        android:src="@drawable/ic_lock"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/edt_confirm_new_password"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:hint="Nhập lại mật khẩu" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            style="@style/Base.Theme.Button.Blue"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="#0CE952"
            android:text="Xác nhận" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/Base.Theme.Button.White"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Quay lại" />
    </LinearLayout>
</LinearLayout>